<Window x:Class="PANS.UI.Lab2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PANS.UI"
        mc:Ignorable="d"
        Title="Lab2 window" Height="450" Width="800">
    <Grid>
        <TabControl 
            x:Name="TabControl"
            Grid.ColumnSpan="3" 
            Grid.RowSpan="3">

            <TabItem Header="Data Base" >
                <Border>
                    <local:DataBaseControl x:Name="DataBaseControl"/>
                </Border>
            </TabItem>
            <TabItem Header="Function Graph">
                <Border>
                    <local:FunctionGraphControl x:Name="FunctionGraphControl"/>
                </Border>
            </TabItem>
            <TabItem Header="Interactivity">
                <Border>
                    <local:InteractivityControl x:Name="InteractivityControl"/>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
